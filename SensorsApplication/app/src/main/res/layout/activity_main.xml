<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="553dp"
        android:text="Activity 1" />

    <Button
        android:id="@+id/gatherTrainingData"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="450dp"
        android:text="Gather Training Data" />

    <Button
        android:id="@+id/buildModel"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="360dp"
        android:text="Build Model" />

    <Button
        android:id="@+id/deleteTrainingData"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="270dp"
        android:text="Delete training data" />

    <Button
        android:id="@+id/startPredicting"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="180dp"
        android:text="Start Predicting" />

    <Button
        android:id="@+id/getPredicted"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="10dp"
        android:text="Get Predicted" />

    <Button
        android:id="@+id/stopPredicting"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="90dp"
        android:text="Stop Predicting" />
</RelativeLayout>